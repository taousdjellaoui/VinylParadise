<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/phone_CardviewGenre"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="#DAE8F3"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:id="@+id/background_color"
        android:layout_width="859dp"
        android:layout_height="254dp"
        android:padding="5dp">


        <LinearLayout
            android:layout_width="873dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:textAlignment="gravity">

            <TextView
                android:id="@+id/titreVinyl"
                android:layout_width="345dp"
                android:layout_height="44dp"
                android:layout_marginStart="-1dp"
                android:layout_marginEnd="262dp"
                android:background="@drawable/rouneded_top_corners"
                android:backgroundTint="#A9CAE6"
                android:baselineAligned="false"
                android:capitalize="none"
                android:fontFamily="sans-serif-black"
                android:gravity="center|left"
                android:paddingStart="10dp"
                android:text="Bewitched"
                android:textAlignment="gravity"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageVinyl"
            android:layout_width="122dp"
            android:layout_height="133dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="54dp" />

        <TextView
            android:id="@+id/artistVinyl"
            android:layout_width="79dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="155dp"
            android:layout_marginEnd="321dp"
            android:layout_marginBottom="151dp"
            android:text="Laufey"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prixVinyl"
            android:layout_width="101dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="159dp"
            android:layout_marginEnd="88dp"
            android:layout_marginBottom="98dp"
            android:text="87.99"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>